
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<table align="center" style="font-size: 13pt">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng</td>
            <td>@Html.TextBox("HoTenKH") @ViewData["Loi1"]</td>
        </tr>
        <tr style="height: 40px">
            <td>Tên đăng nhập</td>
            <td>@Html.TextBox("Tendn") @ViewData["Loi2"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Mật khẩu</td>
            <td>@Html.Password("MatKhau") @ViewData["Loi3"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Nhập Lại Mật khẩu</td>
            <td>@Html.Password("MatKhaunhaplai") @ViewData["Loi4"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Địa chỉ</td>
            <td>@Html.TextBox("DiaChi") @ViewData["Loi5"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Email</td>
            <td>@Html.TextBox("Email") @ViewData["Loi6"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Điện thoại</td>
            <td>@Html.TextBox("DienThoai") @ViewData["Loi7"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Ngày sinh</td>
            <td><input type="date" name="NgaySinh"/> @ViewData["Loi8"]</td>
        </tr>
        <tr  style="height: 40px">
            <td>Đăng ký</td>
            <td><input type="submit" name="DangKy" value="Đăng ký"/></td>
        </tr>
    }
</table>


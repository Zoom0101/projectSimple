
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h4 style="color:red; text-align:center; font-size: 14pt">@ViewBag.Thongbao</h4>
<table style="font-size:14pt" align="center">
    <h2 style="text-align:center; color:blue; font-weight:bold">Đăng Nhập</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập</td>
            <td>@Html.TextBox("TenDN") @ViewData["Loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu</td>
            <td>@Html.Password("MatKhau") @ViewData["Loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td>Đăng nhập</td>
            <td><input name="DangNhap" value="Đăng nhập" type="submit" /></td>
        </tr>
    }

</table>

